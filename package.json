{
  "name": "@mattb.tech/website-backup",
  "version": "1.0.0",
  "description": "Makes a complete copy of mattb.tech as a backup",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "go": "npm run build && node src/index.js",
    "clean": "rm -Rf ./output/*",
    "serve": "http-server -p 8123 ./output",
    "test-run": "npm run clean && npm run go && concurrently \"npm run serve\" \"sleep 1 && open http://localhost:8123\""
  },
  "author": "Matt Benton <m@mattb.tech>",
  "license": "UNLICENSED",
  "dependencies": {
    "clean": "^4.0.2",
    "escape-string-regexp": "^3.0.0",
    "isutf8": "^2.1.0",
    "mkdirp": "^1.0.4",
    "puppeteer": "^2.1.1",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@types/escape-string-regexp": "^2.0.1",
    "@types/mkdirp": "^1.0.0",
    "@types/puppeteer": "^2.0.1",
    "concurrently": "^5.1.0",
    "http-server": "^0.12.1",
    "typescript": "^3.8.3"
  }
}
